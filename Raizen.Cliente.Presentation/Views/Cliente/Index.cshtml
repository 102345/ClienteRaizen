@model IEnumerable<Raizen.Cliente.Application.Contracts.ClienteModel>
@{
    ViewData["Title"] = "Lista Clientes";
}
<h3>@ViewData["Title"]</h3>

<div class="container shadow p-5">
    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
    <div class="row">
        @await Component.InvokeAsync("FilterComponent")
    </div>
</div>

<div class="container shadow p-5">

 @* <form method="POST" enctype="multipart/form-data" asp-controller="ProcessFileMeter" asp-action="ExecuteProcessFile"> *@
<div class="col-xs-12">
@* 
    <div class="row">
        <div class="col-md-12">
            <div style="text-align:center">
                   <h6 style ="@ViewBag.ColorMessageFileMeter">@ViewBag.MessageProcessFileMeter</h6>
            </div>
        </div>         
    </div> *@
    
    <div class="row">
        <div class="col-md-12 ">
            <div class="float-end">
                    <a class="btn btn-primary" href="@Url.Action("AddCliente", "Cliente")">
                            <svg bootstrap-icon="Key" width="24" height="24"></svg>
                            Criar Cliente
                    </a>
            </div>
            
        </div>

    </div>

    <div>

        <table id="tblListaClientes" class="table table-striped table-hover">

            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                    <th>@Html.DisplayNameFor(model => model.UF)</th>
                    <th>@Html.DisplayNameFor(model => model.CEP)</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>

            <tbody>
                @if (@Model!=null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                            <td>@Html.DisplayFor(modelItem => item.UF)</td>
                            <td>@Html.DisplayFor(modelItem => item.CEP)</td>
                            <td>
                                <a class="btn btn-success" href="@Url.Action("Edit", "Cliente",new {id = item.Id})">
                                    <svg bootstrap-icon="PersonFill" width="16" height="16"></svg>
                                        Editar Cliente
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Cliente",new {id = item.Id})">
                                    <svg bootstrap-icon="Trash" width="16" height="16"></svg>

                                </a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>

    </div>

</div>
@* </form> *@
</div>